<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plantry" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green1</item>
        <item name="colorSecondaryVariant">@color/gray1</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_color</item>

    </style>


    <style name="Theme.Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white1</item>
        <item name="android:windowBackground">@color/white1</item>
    </style>

    <style name="Theme.Plantry.AlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 custom view 영역만 보이게 -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog 가 센터에 나오게 -->
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>