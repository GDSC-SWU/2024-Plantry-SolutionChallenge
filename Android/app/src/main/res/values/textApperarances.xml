<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Plantry" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Plantry.Title">
        <item name="fontFamily">@font/font_roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Plantry.SubTitle">
        <item name="fontFamily">@font/font_roboto_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Plantry.Content">
        <item name="fontFamily">@font/font_roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Plantry.Detail">
        <item name="fontFamily">@font/font_roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>