<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.plantry.presentation.home.ui.FragmentHome"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_home_pantry"
            app:destination="@id/detail_home_pantry" />
    </fragment>
    <fragment
        android:id="@+id/detail_home_pantry"
        android:name="com.plantry.presentation.home.ui.FragmentHomePantry"
        android:label="HomePantryFragment">
        <action
            android:id="@+id/action_home_pantry_to_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.plantry.presentation.profile.FragmentProfile"
        android:label="ProfileFragment" />
</navigation>