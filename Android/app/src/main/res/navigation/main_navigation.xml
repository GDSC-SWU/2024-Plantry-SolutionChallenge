<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.plantry.presentation.home.ui.FragmentHome"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_home_pantry"
            app:destination="@id/detail_home_pantry" />
        <action
            android:id="@+id/action_home_to_else"
            app:destination="@id/home_else_bottom_sheet" />
    </fragment>
    <fragment
        android:id="@+id/home_else_bottom_sheet"
        android:name="com.plantry.presentation.home.bottomsheet.HomeElseBottomSheet"
        android:label="home_else_bottom_sheet">
        <action
            android:id="@+id/action_else_to_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_else_to_delete"
            app:destination="@id/home_delete_popoup" />
    </fragment>
    <fragment
        android:id="@+id/home_alarm_bottom_sheet"
        android:name="com.plantry.presentation.home.bottomsheet.HomeAlarmBottomSheet"
        android:label="home_alarm_bottom_sheet">
        <action
            android:id="@+id/action_alarm_to_pantry_content"
            app:destination="@id/detail_home_pantry" />
    </fragment>
    <fragment
        android:id="@+id/home_delete_popoup"
        android:name="com.plantry.presentation.home.popup.HomeDeletePopUp"
        android:label="HomeDeletePopUp">
        <action
            android:id="@+id/action_delete_to_else"
            app:destination="@id/home_else_bottom_sheet" />
    </fragment>
    <fragment
        android:id="@+id/detail_home_pantry"
        android:name="com.plantry.presentation.home.ui.FragmentHomePantry"
        android:label="HomePantryFragment">
        <action
            android:id="@+id/action_home_pantry_to_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_home_pantry_to_alarm"
            app:destination="@id/home_alarm_bottom_sheet" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.plantry.presentation.profile.FragmentProfile"
        android:label="ProfileFragment" />
</navigation>