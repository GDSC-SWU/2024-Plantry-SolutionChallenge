<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ab_profile_delete_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white1">

                <ImageView
                    android:id="@+id/iv_profile_delete_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_pantry_back" />

                <TextView
                    android:id="@+id/tv_profile_delete_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="@string/profile_delete_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Heding1" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/tv_profile_delete_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="@string/profile_delete_id_main_title"
            android:textAppearance="@style/TextAppearance.Plantry.Heding3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ab_profile_delete_appbar" />

        <TextView
            android:id="@+id/tv_profile_delete_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textAppearance="@style/TextAppearance.Plantry.Body6"
            android:text="@string/profile_delete_id_reason"
            app:layout_constraintStart_toStartOf="@id/tv_profile_delete_title"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_title" />

        <TextView
            android:id="@+id/tv_profile_delete_reason_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_line_line2_8_rec"
            android:drawableEnd="@drawable/ic_add_food_down"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/profile_delete_reason_1"
            android:textAppearance="@style/TextAppearance.Plantry.Body5"
            app:layout_constraintStart_toStartOf="@id/tv_profile_delete_reason"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_reason" />

        <include
            android:id="@+id/layout_delete_reaon_list"
            layout="@layout/popup_delete_reason_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/tv_profile_delete_reason_content"
            app:layout_constraintStart_toStartOf="@id/tv_profile_delete_reason_content"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_reason_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/v_profile_delete_id_line"
            android:background="@color/line1"
            app:layout_constraintTop_toBottomOf="@id/layout_delete_reaon_list"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_profile_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_fill_error_color_8_rec"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            android:paddingVertical="16dp"
            android:layout_marginHorizontal="28dp"
            android:text="@string/popup_button_delete"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            android:textColor="@color/white1"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>