<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/shape_fill_white2_8_rec"
    android:paddingHorizontal="28dp"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/tv_profile_mission_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_profile_mission_title"
        android:textAppearance="@style/TextAppearance.Plantry.Body5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_mission_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/selector_home_bottom_sheet_alarm_check"
        android:drawablePadding="12dp"
        android:text="@string/item_profile_mission_name"
        android:textAppearance="@style/TextAppearance.Plantry.Body6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_mission_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>