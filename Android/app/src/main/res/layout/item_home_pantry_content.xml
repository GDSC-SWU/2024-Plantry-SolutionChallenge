<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_pantry_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_pantry_item_content_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/shape_fill_primary_color_oval"
            android:backgroundTint="@color/white3"
            android:padding="9dp"
            android:scaleType="fitCenter"
            android:text="@string/home_pantry_item_content_food_img"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_pantry_item_content_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.Plantry.Body4"
            app:layout_constraintStart_toEndOf="@id/tv_home_pantry_item_content_img"
            app:layout_constraintTop_toTopOf="@id/tv_home_pantry_item_content_img"
            tools:text="@string/home_pantry_item_content_food_name" />

        <TextView
            android:id="@+id/tv_home_pantry_item_content_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_pantry_item_content_use_by_date"
            android:textAppearance="@style/TextAppearance.Plantry.Caption"
            android:textColor="@color/highlight_redday"
            app:layout_constraintBottom_toTopOf="@+id/tv_home_pantry_item_content_d_day"
            app:layout_constraintStart_toStartOf="@id/tv_home_pantry_item_content_food_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_pantry_item_content_food_name" />

        <ImageView
            android:id="@+id/iv_home_pantry_item_content_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_home_pantry_item_content_date"
            app:layout_constraintStart_toEndOf="@id/tv_home_pantry_item_content_date"
            app:layout_constraintTop_toTopOf="@id/tv_home_pantry_item_content_date"
            tools:src="@drawable/ic_home_pantry_alarm_on" />


        <TextView
            android:id="@+id/tv_home_pantry_item_content_d_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Plantry.Caption"
            app:layout_constraintBottom_toBottomOf="@id/tv_home_pantry_item_content_img"
            app:layout_constraintStart_toStartOf="@id/tv_home_pantry_item_content_date"
            tools:text="@string/home_pantry_item_content_d_day" />


        <ImageView
            android:id="@+id/iv_home_pantry_item_content_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:src="@drawable/ic_home_pantry_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/v_home_pantry_item_content_line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_pantry_item_content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            tools:text="@string/home_pantry_item_content_count"
            android:textAppearance="@style/TextAppearance.Plantry.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_home_pantry_item_content_plus"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home_pantry_item_content_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_home_pantry_minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_home_pantry_item_content_count"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/v_home_pantry_item_content_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/line1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>