<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white1"
        tools:context=".presentation.MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_main_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toTopOf="@id/bnv_main_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/main_navigation" />

        <View
            android:id="@+id/v_bnv_gradation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/shadow_bnv_5"
            app:layout_constraintBottom_toBottomOf="@id/bnv_main_navigation"
            app:layout_constraintEnd_toEndOf="@id/bnv_main_navigation"
            app:layout_constraintStart_toStartOf="@id/bnv_main_navigation" />

        <ImageView
            android:id="@+id/iv_main_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_navigation_add_food"
            android:elevation="20dp"
            android:shadowColor="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@id/bnv_main_navigation"
            app:layout_constraintEnd_toEndOf="@id/bnv_main_navigation"
            app:layout_constraintStart_toStartOf="@id/bnv_main_navigation"
            app:layout_constraintTop_toTopOf="@id/bnv_main_navigation" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnv_main_navigation"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/shape_fill_white_color_20_rec_top"
            android:paddingHorizontal="27dp"
            app:itemActiveIndicatorStyle="@null"
            app:itemIconSize="24dp"
            app:itemPaddingBottom="14dp"
            app:itemPaddingTop="16dp"
            app:itemRippleColor="@null"
            app:itemTextAppearanceActive="@style/TextAppearance.Plantry.Navigation3"
            app:itemTextAppearanceInactive="@style/TextAppearance.Plantry.Navigation4"
            app:itemTextColor="@drawable/selector_navigation_text"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/navigation_main" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>