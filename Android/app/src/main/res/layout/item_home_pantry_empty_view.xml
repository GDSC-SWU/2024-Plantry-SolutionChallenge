<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_home_pantry_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="28dp">

        <ImageView
            android:id="@+id/iv_home_pantry_empty_charcter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_pantry_empty_charcter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_pantry_empty_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:lineSpacingExtra="12dp"
            android:text="@string/home_pantry_empty_fill_ingrefients"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            android:textColor="@color/gray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_home_pantry_empty_charcter" />

        <TextView
            android:id="@+id/tv_home_pantry_empty_add_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_fill_primary_color_8_rec"
            android:paddingVertical="16dp"
            android:text="@string/home_pantry_empty_add_food"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            android:textColor="@color/white1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home_pantry_empty_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>