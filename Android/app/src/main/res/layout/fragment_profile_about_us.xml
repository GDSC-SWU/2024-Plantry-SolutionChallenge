<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ab_profile_about_us_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white1">

                <ImageView
                    android:id="@+id/iv_profile_about_us_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_pantry_back" />

                <TextView
                    android:id="@+id/tv_profile_about_us_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="@string/profile_about_us_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Heding1" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/sv_profile_about_us_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ab_profile_about_us_appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="28dp">

                <TextView
                    android:id="@+id/tv_profile_about_us_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_fill_white2_8_rec"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="24dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/profile_about_us_comments"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_profile_about_us_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/img_about_us_server"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_comments" />

                <TextView
                    android:id="@+id/tv_profile_about_us_server_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_about_us_server"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_server"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_server"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_about_us_server" />

                <TextView
                    android:id="@+id/tv_profile_about_us_server_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_fill_white2_8_rec"
                    android:backgroundTint="@color/cover_red"
                    android:paddingVertical="9dp"
                    android:text="@string/profile_about_us_server_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Plantry.Body4"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_server"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_server"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_server_name" />


                <ImageView
                    android:id="@+id/iv_profile_about_us_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="28dp"
                    android:background="@drawable/img_about_us_client"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_comments" />

                <TextView
                    android:id="@+id/tv_profile_about_us_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_about_us_client"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_client"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_client"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_about_us_client" />

                <TextView
                    android:id="@+id/tv_profile_about_us_client_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_fill_white2_8_rec"
                    android:backgroundTint="@color/cover_green"
                    android:paddingVertical="9dp"
                    android:text="@string/profile_about_us_client_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Plantry.Body4"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_client"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_client"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_client_name" />


                <ImageView
                    android:id="@+id/iv_profile_about_us_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/img_about_us_design"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_client_title" />

                <TextView
                    android:id="@+id/tv_profile_about_us_design_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_about_us_design"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_design"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_design"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_about_us_design" />

                <TextView
                    android:id="@+id/tv_profile_about_us_design_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_fill_white2_8_rec"
                    android:backgroundTint="@color/cover_yellow"
                    android:paddingVertical="9dp"
                    android:text="@string/profile_about_us_design_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Plantry.Body4"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_design"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_design"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_design_name" />


                <ImageView
                    android:id="@+id/iv_profile_about_us_aiml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="28dp"
                    android:background="@drawable/img_about_us_alml"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_client_title" />

                <TextView
                    android:id="@+id/tv_profile_about_us_aiml_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/profile_about_us_aiml"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_aiml"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_aiml"
                    app:layout_constraintTop_toBottomOf="@id/iv_profile_about_us_aiml" />

                <TextView
                    android:id="@+id/tv_profile_about_us_aiml_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_fill_white2_8_rec"
                    android:backgroundTint="@color/cover_purple"
                    android:paddingVertical="9dp"
                    android:text="@string/profile_about_us_aiml_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Plantry.Body4"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_about_us_aiml"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_about_us_aiml"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_aiml_name" />

                <TextView
                    android:id="@+id/tv_profile_about_us_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/shape_fill_primary_color_8_rec"
                    android:paddingVertical="16dp"
                    android:text="@string/profile_about_us_contact"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Plantry.Body3"
                    android:textColor="@color/white1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_about_us_aiml_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>