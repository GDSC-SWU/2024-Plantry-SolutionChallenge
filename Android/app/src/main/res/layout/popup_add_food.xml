<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@drawable/shape_fill_white1_28_rec"
        android:paddingHorizontal="30dp"
        android:paddingVertical="40dp">

        <TextView
            android:id="@+id/tv_add_food_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_foods_popup_title"
            android:textAppearance="@style/TextAppearance.Plantry.Heding3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/sv_add_food_scrollview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="47dp"
            android:background="@color/white1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_food_popup_select_pantry_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_food_pantry_select"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_add_food_popup_select_pantry_content"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:drawableEnd="@drawable/ic_add_food_down"
                    android:drawablePadding="30dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:hint="select pantry"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_select_pantry_title" />

                <include
                    android:id="@+id/layout_popup_add_food_pantry_name_list"
                    layout="@layout/popup_add_food_date_list"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_add_food_popup_select_pantry_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_select_pantry_content" />


                <TextView
                    android:id="@+id/tv_add_food_popup_food_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_food_pantry_food_name_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_select_pantry_content" />

                <TextView
                    android:id="@+id/tv_add_food_popup_food_icon_test_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:drawableStart="@drawable/ic_add_food_blank_img"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_food_name_title" />

                <TextView
                    android:id="@+id/tv_add_food_popup_food_icon_real_img"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="@string/add_food_item_icon"
                    android:textSize="28sp"
                    android:padding="0dp"
                    android:textAlignment="center"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintEnd_toEndOf="@+id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_food_name_title" />

                <EditText
                    android:id="@+id/et_add_food_popup_food_name_input"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="61dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:hint="@string/add_food_popup_food_name"
                    android:maxLength="12"
                    android:paddingStart="16dp"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    android:textColorHint="@color/gray3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintTop_toTopOf="@id/tv_add_food_popup_food_icon_test_img" />

                <TextView
                    android:id="@+id/tv_add_food_popup_food_error_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_home_popup_error"
                    android:drawablePadding="6dp"
                    android:text="@string/home_plus_popup_error_message1"
                    android:textAppearance="@style/TextAppearance.Plantry.Caption"
                    android:textColor="@color/error_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_add_food_popup_food_icon_test_img"
                    app:layout_constraintTop_toBottomOf="@id/et_add_food_popup_food_name_input" />

                <TextView
                    android:id="@+id/tv_add_food_popup_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableEnd="@drawable/ic_add_food_popup_question"
                    android:drawablePadding="6dp"
                    android:text="@string/add_food_pantry_day_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_food_error_message" />

                <TextView
                    android:id="@+id/tv_add_food_popup_date_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:drawableEnd="@drawable/ic_add_food_down"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="@string/home_pantry_item_content_use_by_date"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_day_title" />


                <include
                    android:id="@+id/layout_popup_add_food_day_list"
                    layout="@layout/popup_add_food_pantry_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@id/tv_add_food_popup_date_check"
                    app:layout_constraintStart_toStartOf="@id/tv_add_food_popup_date_check"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_date_check" />

                <EditText
                    android:id="@+id/et_add_food_popup_date_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shape_line_line2_8_rec"
                    android:hint="@string/add_food_popup_yy_mm_dd"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    android:textColorHint="@color/gray3"
                    app:layout_constraintStart_toEndOf="@id/tv_add_food_popup_date_check"
                    app:layout_constraintTop_toTopOf="@id/tv_add_food_popup_date_check" />

                <TextView
                    android:id="@+id/tv_add_food_popup_date_error_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_home_popup_error"
                    android:drawablePadding="6dp"
                    android:text="@string/popup_add_food_error_message3"
                    android:textAppearance="@style/TextAppearance.Plantry.Caption"
                    android:textColor="@color/error_color"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_add_food_popup_date_check"
                    app:layout_constraintTop_toBottomOf="@id/et_add_food_popup_date_input" />

                <TextView
                    android:id="@+id/tv_add_food_popup_storage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_food_pantry_storage_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_date_error_message" />

                <RadioGroup
                    android:id="@+id/rg_add_food_storage_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_storage_title">

                    <RadioButton
                        android:id="@+id/rb_add_food_storage_cold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_add_food_popup_radio_button"
                        android:button="@null"
                        android:checked="true"
                        android:minHeight="0dp"
                        android:padding="8dp"
                        android:text="@string/home_pantry_cold"
                        android:textAppearance="@style/TextAppearance.Plantry.Body5"
                        android:textColor="@color/dark" />

                    <RadioButton
                        android:id="@+id/rb_add_food_storage_freeze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:background="@drawable/selector_add_food_popup_radio_button"
                        android:button="@null"
                        android:minHeight="0dp"
                        android:padding="8dp"
                        android:text="@string/home_pantry_freeze"
                        android:textAppearance="@style/TextAppearance.Plantry.Body5"
                        android:textColor="@color/dark" />

                    <RadioButton
                        android:id="@+id/rb_add_food_storage_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:background="@drawable/selector_add_food_popup_radio_button"
                        android:button="@null"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="8dp"
                        android:text="@string/home_pantry_etc"
                        android:textAppearance="@style/TextAppearance.Plantry.Body5"
                        android:textColor="@color/dark" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_add_food_popup_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_food_pantry_count"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rg_add_food_storage_radio_group" />


                <ImageView
                    android:id="@+id/iv_add_food_popup_count_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24sp"
                    android:src="@drawable/ic_home_pantry_minus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_count" />

                <TextView
                    android:id="@+id/tv_home_pantry_item_content_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/home_pantry_item_content_count"
                    android:textAppearance="@style/TextAppearance.Plantry.Caption"
                    app:layout_constraintBottom_toBottomOf="@id/iv_add_food_popup_count_minus"
                    app:layout_constraintStart_toEndOf="@id/iv_add_food_popup_count_minus"
                    app:layout_constraintTop_toTopOf="@id/iv_add_food_popup_count_minus" />

                <ImageView
                    android:id="@+id/iv_add_food_popup_count_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_home_pantry_plus"
                    app:layout_constraintStart_toEndOf="@id/tv_home_pantry_item_content_count"
                    app:layout_constraintTop_toTopOf="@id/iv_add_food_popup_count_minus" />

                <TextView
                    android:id="@+id/tv_add_food_popup_count_error_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/ic_home_popup_error"
                    android:drawablePadding="6dp"
                    android:visibility="gone"
                    android:text="@string/popup_add_food_error_message4"
                    android:textAppearance="@style/TextAppearance.Plantry.Caption"
                    android:textColor="@color/error_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/iv_add_food_popup_count_minus"
                    app:layout_constraintTop_toBottomOf="@id/iv_add_food_popup_count_minus" />

                <TextView
                    android:id="@+id/tv_add_food_half_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="20dp"
                    android:drawableStart="@drawable/selector_home_bottom_sheet_alarm_check"
                    android:drawablePadding="6dp"
                    android:text="@string/popup_add_food_half_unit"
                    android:textAppearance="@style/TextAppearance.Plantry.Body5"
                    android:textColor="@color/gray3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_food_popup_count_error_message" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_add_food_popup_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_line_line2_8_rec"
            android:paddingHorizontal="36dp"
            android:paddingVertical="16dp"
            android:text="@string/popup_button_cancle"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            app:layout_constraintEnd_toStartOf="@id/tv_add_food_popup_confirm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_add_food_scrollview" />


        <TextView
            android:id="@+id/tv_add_food_popup_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_fill_primary_color_8_rec"
            android:paddingHorizontal="36dp"
            android:paddingVertical="16dp"
            android:text="@string/popup_button_confirm"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            android:textColor="@color/white1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/tv_add_food_popup_cancle"
            app:layout_constraintTop_toBottomOf="@id/sv_add_food_scrollview" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>