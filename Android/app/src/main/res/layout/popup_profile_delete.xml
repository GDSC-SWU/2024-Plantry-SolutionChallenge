<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:background="@drawable/shape_fill_white1_28_rec">

        <TextView
            android:id="@+id/tv_profile_delete_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_delete_id_title"
            android:textAppearance="@style/TextAppearance.Plantry.Button1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_delete_popup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/profile_delete_id_content"
            android:textAppearance="@style/TextAppearance.Plantry.Body5"
            android:textColor="@color/gray3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_popup_title" />

        <TextView
            android:id="@+id/tv_profile_delete_popup_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_line_line2_8_rec"
            android:paddingHorizontal="36dp"
            android:paddingVertical="16dp"
            android:text="@string/popup_button_cancle"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            app:layout_constraintEnd_toStartOf="@id/tv_profile_delete_popup_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_popup_subtitle" />


        <TextView
            android:id="@+id/tv_profile_delete_popup_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_fill_error_color_8_rec"
            android:paddingHorizontal="36dp"
            android:paddingVertical="16dp"
            android:text="@string/popup_button_delete"
            android:textAppearance="@style/TextAppearance.Plantry.Body3"
            android:textColor="@color/white1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/tv_profile_delete_popup_cancle"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_delete_popup_subtitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>