<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ab_home_pantry_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_home_pantry_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_home_pantry_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:src="@drawable/ic_home_pantry_back" />

                <TextView
                    android:id="@+id/tv_home_pantry_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Plantry.Heding2"
                    tools:text="@string/home_pantry_name" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:id="@+id/et_home_pantry_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/shape_fill_white2_100_rec"
            android:drawableStart="@drawable/ic_home_pantry_search"
            android:drawablePadding="8dp"
            android:hint="@string/home_pantry_search"
            android:paddingVertical="11dp"
            android:paddingStart="12dp"
            android:textAppearance="@style/TextAppearance.Plantry.Body6"
            android:textColorHint="@color/gray1"
            app:layout_constraintTop_toBottomOf="@id/ab_home_pantry_appbar" />

        <ImageView
            android:id="@+id/iv_home_pantry_search_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_home_pantry_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/et_home_pantry_search"
            app:layout_constraintEnd_toEndOf="@id/et_home_pantry_search"
            app:layout_constraintTop_toTopOf="@id/et_home_pantry_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/ic_home_pantry_floating_plus"
            android:elevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_home_pantry_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_home_pantry_search"
            app:tabIndicatorColor="@color/primary_color"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextAppearance="@style/TextAppearance.Plantry.Body2"
            app:tabSelectedTextColor="@color/dark"
            app:tabTextAppearance="@style/TextAppearance.Plantry.Body3"
            app:tabTextColor="@color/gray3">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_home_pantry_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_pantry_all" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_home_pantry_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_pantry_cold" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_home_pantry_freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_pantry_freeze" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ti_home_pantry_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_pantry_etc" />
        </com.google.android.material.tabs.TabLayout>

        <include
            android:id="@+id/layout_home_pantry_empty_view"
            layout="@layout/item_home_pantry_empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_home_pantry_tab" />

        <ScrollView
            android:id="@+id/sv_home_pantry_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_home_pantry_tab">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_home_pantry_item_food_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_home_pantry_d_day" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>