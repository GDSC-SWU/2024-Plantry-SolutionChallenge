<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/tv_item_add_food_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="28dp"
        android:text="@string/add_food_item_icon"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_add_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/add_food_item_food_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Plantry.Navigation3"
        app:layout_constraintEnd_toEndOf="@id/tv_item_add_food_icon"
        app:layout_constraintStart_toStartOf="@id/tv_item_add_food_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_item_add_food_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>