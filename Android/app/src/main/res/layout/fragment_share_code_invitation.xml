<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_home_share_code_member_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/share_code_member_count"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_home_share_code_invitation_code_view" />


                <EditText
                    android:id="@+id/et_home_share_code_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/shape_fill_white2_100_rec"
                    android:drawableStart="@drawable/ic_home_pantry_search"
                    android:drawablePadding="8dp"
                    android:hint="@string/home_pantry_search"
                    android:maxLines="1"
                    android:paddingVertical="11dp"
                    android:paddingStart="12dp"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    android:textColorHint="@color/gray1"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_share_code_member_title" />

                <ImageView
                    android:id="@+id/iv_home_share_code_search_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_home_pantry_close"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/et_home_share_code_search"
                    app:layout_constraintEnd_toEndOf="@id/et_home_share_code_search"
                    app:layout_constraintTop_toTopOf="@id/et_home_share_code_search" />

                <TextView
                    android:id="@+id/tv_home_share_code_owner_invitation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/share_code_owner_invitation_count"
                    android:textAppearance="@style/TextAppearance.Plantry.Body6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/layout_home_share_code_invitation_code_view"
                    layout="@layout/item_share_code_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_share_code_owner_invitation_title" />

                <ScrollView
                    android:id="@+id/sv_home_share_code_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_home_share_code_search">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_home_share_code_item_member_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="14"
                        tools:listitem="@layout/item_share_code_member" />
                </ScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>