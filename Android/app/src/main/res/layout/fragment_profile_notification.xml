<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ab_profile_alarm_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white1">

                <ImageView
                    android:id="@+id/iv_profile_alarm_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_pantry_back" />

                <TextView
                    android:id="@+id/tv_profile_alarm_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="@string/profile_alarm_title"
                    android:textAppearance="@style/TextAppearance.Plantry.Heding1" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tv_profile_alarm_allow_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_line_line1_rec_bottom"
            android:paddingVertical="27dp"
            android:paddingStart="24dp"
            android:text="@string/profile_alarm_allow_notification"
            android:textAppearance="@style/TextAppearance.Plantry.Body6"
            app:layout_constraintTop_toBottomOf="@id/ab_profile_alarm_appbar" />

        <ImageView
            android:id="@+id/tv_profile_alarm_allow_notification_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/selector_profile_alarm_toggle"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_alarm_allow_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_profile_alarm_allow_notification" />

        <TextView
            android:id="@+id/tv_profile_alarm_allow_marketing_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_line_line1_rec_bottom"
            android:paddingVertical="27dp"
            android:paddingStart="24dp"
            android:text="@string/profile_alarm_marketing_notification"
            android:textAppearance="@style/TextAppearance.Plantry.Body6"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_alarm_allow_notification_toggle" />

        <ImageView
            android:id="@+id/tv_profile_alarm_allow_marketing_notification_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/selector_profile_alarm_toggle"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_alarm_allow_marketing_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_profile_alarm_allow_marketing_notification" />

        <TextView
            android:id="@+id/tv_profile_alarm_product_deadline_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="27dp"
            android:paddingStart="24dp"
            android:text="@string/profile_alarm_deadline_notification"
            android:textAppearance="@style/TextAppearance.Plantry.Body6"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_alarm_allow_marketing_notification_toggle" />

        <ImageView
            android:id="@+id/tv_profile_alarm_product_deadline_notification_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/selector_profile_alarm_toggle"
            app:layout_constraintBottom_toBottomOf="@id/tv_profile_alarm_product_deadline_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_profile_alarm_product_deadline_notification" />

        <TextView
            android:id="@+id/tv_profile_alarm_time_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:background="@drawable/shape_line_line2_8_rec"
            android:drawableEnd="@drawable/ic_add_food_down"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/profile_alarm1"
            android:textAppearance="@style/TextAppearance.Plantry.Body5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_alarm_product_deadline_notification_toggle" />

        <include
            android:id="@+id/layout_alarm_time_list"
            layout="@layout/popup_notification_alarm_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="1:0.5"
            app:layout_constraintEnd_toEndOf="@+id/tv_profile_alarm_time_content"
            app:layout_constraintStart_toStartOf="@+id/tv_profile_alarm_time_content"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_alarm_time_content" />


        <View
            android:id="@+id/v_profile_alarm_product_deadline_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_alarm_time_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>