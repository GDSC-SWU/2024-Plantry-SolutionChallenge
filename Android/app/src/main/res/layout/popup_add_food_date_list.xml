<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fill_white1_8_rec"
        android:elevation="10dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/tv_add_food_popup_pantry_list_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/shape_line_line2_8_rec"
            android:drawableEnd="@drawable/ic_add_food_down"
            android:drawablePadding="30dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/home_pantry_name"
            android:textAppearance="@style/TextAppearance.Plantry.Body5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/sv_add_food_popup_pantry_list__scroll_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_add_food_popup_pantry_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_add_food_pantry_name"
                tools:itemCount="5"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>